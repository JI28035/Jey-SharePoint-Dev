
Function CheckForm() 
{
CheckForm=True;
  if(document.frm.txtComments.value.trim.length > 0){ 
   document.frm.AddComment.value = "Yes";
   document.frm.action="test.asp";
  }else{ 
   if(frm.txtPrev.value == "NO"){ 
    Alert ("You have not entered a comment");
    CheckForm=False;
   } 
  }   
 } 

