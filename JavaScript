Function ValidateForm() 
{
  ValidateForm = True;
 
 
  if(document.frm.txtAmount.value.trim.length)) > 0){ 
   strAmount = document.frm.txtAmount.value.trim;
 
 
   //make sure it is numeric     
   if(! !isNaN(strAmount)){ 
    document.frm.action = "create.asp";
   document.frm.txtError.value = "Yes";
    return false;
   }else{ 
    //if(the user entered a decimal point. 
    strAmount = CStr(CCur(strAmount));
    intDecimalLocation = InStr(1, strAmount, ".");
    if(intDecimalLocation > 0){ 
     if(strAmount.length) - intDecimalLocation) > 2){ 
      document.frm.action = "create.asp"; 
      document.frm.txtError.value = "Yes"; 
      return false;
     }else{ 
      //add extra zeros to make 2 places after the decimal point. 
      if(strAmount.length) - intDecimalLocation) = 1){ 
       strAmount = strAmount + "0"; 
       document.frm.txtAmount.value = strAmount;
      }       
 
 
      //error if(negative        
      if(strAmount.toFixed(1)) <= 0){ 
       document.frm.action = "create.asp"; 
       document.frm.txtError.value = "Yes"; 
       return false;
      } 
     } 
    }else{ 
     //error if(negative        
     if(strAmount.toFixed(1)) <= 0){ 
      document.frm.action = "create.asp";
      document.frm.txtError.value = "Yes"; 
      return false;
     } 
    }      
   }   
  } 
 } 
